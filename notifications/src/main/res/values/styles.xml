<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Castled"/>

    <style name="Castled.InApp"/>

    <style name="Castled.InApp.Buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">80.0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16.0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Castled.InApp.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">21.0dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Castled.InApp.Message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">18.0dp</item>
    </style>

    <style name="Castled.InApp.Modal"/>

    <style name="Castled.InApp.Modal.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Castled.InApp.CloseImageButton">
        <item name="android:contentDescription">@string/castled_inapp_close_content_description</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/castled_close_icon</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Castled.InApp.Image">
        <item name="android:contentDescription">@string/castled_inapp_image_content_description</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="Castled.InApp.Modal.Layout.Buttons">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>

    <style name="custom_style_dialog">
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="custom_style_dialog_bottom">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="event_dialog_style">
        <item name="android:windowMinWidthMajor">-50%</item>
        <item name="android:windowMinWidthMinor">-50%</item>
    </style>

    <style name="activity_horizontal_margin"></style>


</resources>
