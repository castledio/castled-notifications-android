<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Castled" />

    <style name="Castled.InApp" />

    <style name="Castled.Push" />

    <!-- Castled in-app generic components -->

    <style name="Castled.Push.TimerLayout">
        <!--        <item name="android:gravity">center_horizontal|center_vertical</item>-->
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Castled.Push.TimerLayout.Small">
        <item name="android:layout_width">@dimen/push_timer_small_box_width</item>
        <item name="android:layout_height">@dimen/push_timer_small_box_height</item>
    </style>

    <style name="Castled.Push.TimerLayout.Large">
        <item name="android:layout_width">@dimen/push_timer_large_box_width</item>
        <item name="android:layout_height">@dimen/push_timer_large_box_height</item>
    </style>

    <style name="Castled.Push.Timer" />

    <style name="Castled.Push.Timer.PlaceholderText">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/push_timer_small_box_width</item>
        <item name="android:layout_height">@dimen/push_timer_small_box_time_placeholder_height
        </item>
    </style>

    <style name="Castled.Push.Timer.TimeText">
        <item name="android:layout_width">@dimen/push_timer_small_box_width</item>
        <item name="android:layout_height">@dimen/push_timer_small_box_width</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/push_timer_small_box_time_font_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/push_timer_rounded</item>
    </style>

    <style name="Castled.Push.Timer.TimeText.Large">
        <item name="android:layout_width">@dimen/push_timer_large_box_width</item>
        <item name="android:layout_height">@dimen/push_timer_large_box_width</item>
        <item name="android:textSize">@dimen/push_timer_large_box_time_font_size</item>

    </style>

    <style name="Castled.Push.Timer.PlaceholderText.Large">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">@dimen/push_timer_large_box_width</item>
        <item name="android:layout_height">@dimen/push_timer_large_box_time_placeholder_height
        </item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="Castled.InApp.Buttons">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Castled.InApp.Buttons.DualButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Castled.InApp.Buttons.DualButtons.Primary" />

    <style name="Castled.InApp.Buttons.DualButtons.Secondary" />

    <style name="Castled.InApp.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/inapp_textview_minheight</item>
        <item name="android:padding">@dimen/inapp_common_padding</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Castled.InApp.Text.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Castled.InApp.Text.Body">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Castled.InApp.ActionButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/inapp_action_buttons_rounded</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Castled.InApp.Message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Castled.InApp.CloseImageButton">
        <item name="android:contentDescription">@string/castled_inapp_close_content_description
        </item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/castled_close_icon_inverted</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Castled.InApp.Image" />

    <!-- Castled modal in-app -->

    <style name="Castled.InApp.Modal" />

    <style name="Castled.InApp.Modal.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Castled.InApp.WebView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Castled.InApp.WebView.FullScreen" />

    <style name="Castled.InApp.WebView.Modal" />

    <style name="Castled.InApp.Image.Modal">
        <item name="android:contentDescription">@string/castled_inapp_image_content_description
        </item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Castled.InApp.Message.Modal">
        <item name="android:padding">@dimen/inapp_common_padding</item>
    </style>

    <style name="Castled.InApp.Modal.Layout.Buttons">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginBottom">@dimen/inapp_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/inbox_buttons_top_margin</item>

    </style>

    <style name="Castled.InApp.CloseImageButton.Modal">
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
    </style>

    <!-- Castled fullscreen in-app -->

    <style name="Castled.InApp.FullScreen" />

    <style name="Castled.InApp.FullScreen.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Castled.InApp.Image.FullScreen">
        <item name="android:contentDescription">@string/castled_inapp_image_content_description
        </item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">0.0dp</item>
    </style>

    <style name="Castled.InApp.Message.FullScreen">
        <item name="android:padding">@dimen/inapp_margin_vertical</item>
    </style>

    <style name="Castled.InApp.FullScreen.Layout.Buttons">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Castled.InApp.CloseImageButton.FullScreen">
        <item name="android:padding">12dp</item>

    </style>

    <!-- Castled banner in-app -->

    <style name="Castled.InApp.Banner" />

    <style name="Castled.InApp.Banner.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Castled.InApp.Image.Banner">
        <item name="android:contentDescription">@string/castled_inapp_image_content_description
        </item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Castled.InApp.Message.Banner">
        <item name="android:gravity">left|center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">@dimen/inapp_banner_margin</item>
        <item name="android:maxLines">3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Castled.InApp.RightIcon">
        <item name="android:src">@drawable/castled_right_icon</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_width">8dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginRight">@dimen/inapp_banner_margin</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="Castled.InApp.CloseImageButton.Banner">
        <item name="android:padding">5.0dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
    </style>

    <!-- TODO: cleanup -->

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/inapp_background_rounded</item>
    </style>

    <style name="custom_style_dialog">
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="custom_style_dialog_bottom">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="event_dialog_style">
        <item name="android:windowMinWidthMajor">-50%</item>
        <item name="android:windowMinWidthMinor">-50%</item>
    </style>

    <style name="activity_horizontal_margin"></style>


</resources>
