<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Castled" />

    <style name="Castled.InApp" />

    <!-- Castled in-app generic components -->

    <style name="Castled.InApp.Buttons">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Castled.InApp.Buttons.DualButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">80.0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16.0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Castled.InApp.Buttons.DualButtons.Primary" />

    <style name="Castled.InApp.Buttons.DualButtons.Secondary" />

    <style name="Castled.InApp.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">21.0dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Castled.InApp.Message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Castled.InApp.CloseImageButton">
        <item name="android:contentDescription">@string/castled_inapp_close_content_description
        </item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/castled_close_icon_inverted</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Castled.InApp.Image" />

    <!-- Castled modal in-app -->

    <style name="Castled.InApp.Modal" />

    <style name="Castled.InApp.Modal.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Castled.InApp.Image.Modal">
        <item name="android:contentDescription">@string/castled_inapp_image_content_description
        </item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Castled.InApp.Message.Modal">
        <item name="android:padding">18.0dp</item>
    </style>

    <style name="Castled.InApp.Modal.Layout.Buttons">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Castled.InApp.CloseImageButton.Modal">
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
    </style>

    <!-- Castled fullscreen in-app -->

    <style name="Castled.InApp.FullScreen" />

    <style name="Castled.InApp.FullScreen.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Castled.InApp.Image.FullScreen">
        <item name="android:contentDescription">@string/castled_inapp_image_content_description
        </item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">0.0dp</item>
    </style>

    <style name="Castled.InApp.Message.FullScreen">
        <item name="android:padding">18.0dp</item>
    </style>

    <style name="Castled.InApp.FullScreen.Layout.Buttons">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Castled.InApp.CloseImageButton.FullScreen">
        <item name="android:padding">12dp</item>
    </style>

    <!-- Castled banner in-app -->

    <style name="Castled.InApp.Banner" />

    <style name="Castled.InApp.Banner.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Castled.InApp.Image.Banner">
        <item name="android:contentDescription">@string/castled_inapp_image_content_description
        </item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">8.0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Castled.InApp.Message.Banner">
        <item name="android:gravity">left</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">8.0dp</item>
        <item name="android:paddingRight">18.0dp</item>
        <item name="android:paddingTop">8.0dp</item>
        <item name="android:paddingBottom">8.0dp</item>
    </style>

    <style name="Castled.InApp.RightIcon">
        <item name="android:src">@drawable/castled_right_icon</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_width">8dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="Castled.InApp.CloseImageButton.Banner">
        <item name="android:padding">4.0dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
    </style>

    <!-- TODO: cleanup -->

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/inapp_background_rounded</item>
    </style>

    <style name="custom_style_dialog">
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="custom_style_dialog_bottom">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="event_dialog_style">
        <item name="android:windowMinWidthMajor">-50%</item>
        <item name="android:windowMinWidthMinor">-50%</item>
    </style>

    <style name="activity_horizontal_margin"></style>


</resources>
